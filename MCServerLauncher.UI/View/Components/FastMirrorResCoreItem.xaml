<UserControl x:Class="MCServerLauncher.UI.View.Components.FastMirrorResCoreItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MCServerLauncher.UI.View.Components"
        xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="130">
    <Border Style="{StaticResource StyledBorder}" Width="125" Height="40" x:Name="CoreItemBorder">
        <Grid Width="Auto">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Margin="10,0,5,0" TextAlignment="Center" VerticalAlignment="Center" Grid.Column="0" x:Name="CoreNameReplacer"/>
            <Border Height="25" Margin="5,0,10,0" VerticalAlignment="Center" Style="{DynamicResource FastMirrorTag}" Grid.Column="1">
                <TextBlock Margin="5,0,5,0" TextAlignment="Center" VerticalAlignment="Center" x:Name="CoreTagReplacer"/>
            </Border>
        </Grid>
    </Border> 
</UserControl>
