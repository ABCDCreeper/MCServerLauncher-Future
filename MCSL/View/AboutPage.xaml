<Page x:Class="MCServerLauncher.View.AboutPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MCServerLauncher.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="关于">

    <Grid>
        <TextBlock Style="{StaticResource TitleTextBlock}" Text="关于" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="35,35,0,0"/>
        <Grid Margin="35,80,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Style="{StaticResource MinititleTextBlock}" TextWrapping="Wrap" Text="MCServerLauncher Future Project" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="0,0,0,20"/>
            <TextBlock Grid.Row="1" Style="{StaticResource MinititleTextBlock}" TextWrapping="Wrap" Text="此项目受开源协议 GNU General Public License Version 3.0 保护，一切侵权行为必究。" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="0,0,0,20"/>
            <TextBlock Grid.Row="2" Style="{StaticResource MinititleTextBlock}" TextWrapping="Wrap" Text="Copyright © 2022-2024 MCSLTeam. All rights reserved." VerticalAlignment="Top" HorizontalAlignment="Left" Margin="0,0,0,20"/>
        </Grid>
    </Grid>
</Page>
